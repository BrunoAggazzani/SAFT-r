                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"></div>
            </div>

        </div>
        <!--Fin Titulo y subtitulo-->

    </div>
    <!-- Fin Encabezado -->

    <!--Formulario ticket-->

    <div class="contenedor-login">
        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
            <div class="col-login col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <form id="form-login" action="/confirmacionTicket" method="post">
                    <h3>Ingrese los datos que se le solicitan a continuación.</h3><br>
                    <h5>¡Atención! No se permiten campos vacíos.</h5>   
                    <br>
                    <div class="form-group">
                        <input type="number" class="form-control"  min= 1 max=9999999999 name="nroticket" placeholder="Nro de ticket" required>
                    </div>
                    <div class="form-group">
                        <input id="mydate" type="date" value="<%=data.today%>" max="<%=data.today%>" class="form-control"  name="fecha" required>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" min= 0 max=9999999999 name="kmocupado"  placeholder="Kilómetros ocupados" required>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" min= 0 max=9999999999 name="kmlibre"  placeholder="Kilómetros libres" required>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" min= 0 max=9999999999 name="viajes"  placeholder="Viajes" required>
                    </div>
                    <div class="form-group">
                        <input type="number" step="any" class="form-control" min= 0 max=99999999 name="recaudacion" placeholder="Recaudación ($)" required>
                    </div>
                    <div class="form-group">
                        <input type="number" step="any" class="form-control" min= 0 max=99999999 name="combustible" placeholder="Combustible  ($)" required>
                    </div>
                    <div class="form-group">
                        <input type="number" step="any" class="form-control" min= 0 max=99999999 name="gastos"  placeholder="Gastos varios  ($)" required>
                    </div>
                    <% if (data) { %>
                        <% const user = data.user; %>
                        <% const movil = data.movil; %>
                        <% const chadmin = data.chadmin; %>
                        <div class="form-group">
                            <input type="text" class="form-control" maxlength="20" name="usuario"  value="<%=user%>" required readonly>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" maxlength="10" name="movil"  placeholder="móvil sugerido: <%=movil%>" required>
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="diachofer"> Día chofer (100%)?</label>
                        </div>
                        <div class="form-group"  style="display: none">
                            <input type="text" class="form-control" name="admin"  value="<%=chadmin%>">
                        </div>
                        <div class="form-group" style="display: none">
                            <input type="date" class="form-control" name="today" value="<%=data.today%>">
                        </div>
                    <% } %>                                
                        <div>
                            <button type="submit" id="btn-login" class="btn btn-login btn-primary">
                                <b>Enviar datos</b>
                            </button>
                        </div>
                </form>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
        </div>
    </div>

    <!--Fin formulario ticket-->

