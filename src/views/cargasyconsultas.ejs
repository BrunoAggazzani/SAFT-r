    <!-- Login -->
    <div class="contenedor-login">
        <div class="row">
            <!--<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>-->
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"></div>
            <div class="col-login col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <form id="form-cargaCh" action="/regChofer" method="post">
                    <h1>Nuevo chofer</h1>
                    <br>
                    <div class="form-group">
                        <input type="text" class="form-control" id="nuevo-chofer-nombre" maxlength="45" name="nombre" placeholder="Nombre" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="nuevo-chofer-nro-movil" maxlength="10" name="movil" placeholder="Nro de móvil" required>
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="turno" required>
                            <option disabled hidden selected value="">Turno</option>
                            <option>m</option>
                            <option>t</option>                                                      
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" id="nuevo-chofer-porcentaje" min=0 max=100 name="comision" placeholder="Comisión (solo números. Por ej: 35)" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="nuevo-chofer-usuario" maxlength="20" name="usuario" placeholder="Usuario" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="nuevo-chofer-password" maxlength="20" name="pass" placeholder="Contraseña" required>
                    </div>
                    <% if (data) { %>                        
                            <div class="form-group">
                                <input type="text" class="form-control" id="nuevo-chofer-admin" name="admin" value="<%=data.admin%>" required readonly>
                            </div>
                            <% } %>
                                <br>
                                <div>
                                    <button type="submit" id="btn-cargaCh" class="btn btn-login btn-primary">
                            <b>Cargar</b>
                        </button>
                                </div>
                </form>
                <br>
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2"></div>
            <div class="col-login col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <h1>Más opciones...</h1>
                <br>
                <form id="form-login" action="/vistaMantenimiento" method="post">
                    <div style="display: none;">
                        <% if (data) { %>
                            <% const admin = data.admin; %>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="admin" value="<%=admin%>" style="display: none">
                                </div>
                        <% } %>
                    </div>                    
                    <button type="submit" id="btn-login" class="btn btn-masopciones btn-login btn-primary">
                        <b>Cargar gastos de mantenimiento</b>
                    </button>
                </form>
                <br>
                <form id="form-login" action="/consultarChoferes" method="post">
                    <div style="display: none;">
                        <% if (data) { %>                            
                                <div class="form-group">
                                    <input type="text" class="form-control" name="admin" value="<%=data.admin%>" style="display: none">
                                </div>
                        <% } %>
                    </div>                    
                    <button type="submit" id="btn-" class="btn-consulchof btn btn-masopciones btn-login btn-primary">
                        <b>Consultar choferes cargados</b>
                    </button>
                </form>
                <br>                
                <hr>                
                <form id="form-login" action="/recaudaciones" method="post">            
                    <div class="form-group">
                        <select class="form-control" name="mes" required>
                            <option disabled hidden selected value="">Seleccione mes</option>
                            <% for(var i = 0; i < fecha.length; i++) { %>
                                <option><%=fecha[i].mes%></option>
                            <% } %>                                                      
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="anio" required>
                            <option disabled hidden selected value="">Seleccione año</option>
                            <% for(var i = 0; i < fecha.length; i++) { %>                                
                                <% if(i==0) { %>
                                    <option><%=fecha[i].anio%></option>
                                <% } else { %>
                                    <% if(fecha[i].anio !== fecha[i-1].anio) { %>
                                        <option><%=fecha[i].anio%></option>
                                        <% } %>
                                    <% } %>                                
                            <% } %>                                                      
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="admin" value="<%=data.admin%>" style="display: none">
                    </div>
                    <%if ( isNaN(fecha[0].mes) == true ) {%> <!--No es un numero-->
                        <button type="submit" id="btn-" class="btn-consulchof btn btn-masopciones btn-login btn-primary" disabled>
                            <b>Resumen mensual detallado</b>
                        </button>    
                    <%}%>
                    <%if (isNaN(fecha[0].mes) == false) {%> <!--Si es un numero-->
                        <button type="submit" id="btn-" class="btn-consulchof btn btn-masopciones btn-login btn-primary">
                            <b>Resumen mensual detallado</b>
                        </button>    
                    <%}%>                                                           
                </form>
                <hr>                               
                <form id="form-login" action="/ultimaSemana" method="post">                   
                    <div class="form-group">
                        <input type="text" class="form-control" name="admin" value="<%=data.admin%>" style="display: none">
                    </div>
                    <button type="submit" id="btn-" class="btn-consulchof btn btn-masopciones btn-login btn-primary">
                        <b>Tickets última semana</b>
                    </button>                                       
                </form>
                <br>                 
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"></div>
        </div>
